<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url"
            placeholder="http://"
            value="{{ instructor.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Instrutor</div>
    <div>
        <input 
            type="text" 
            name="name"
            value="{{ instructor.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email" 
            name="email"
            value="{{ instructor.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ instructor.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="M" 
                {% if instructor.gender== 'M' %}
                checked
                {% endif %}> Masculino
        </span>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="F"
                {% if instructor.gender== 'F' %}
                checked
                {% endif %} > Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Tipo Sangu√≠neo</div>
    <div>
        <select name="blood">
            <option value="A1">A+</option>
            <option value="A0">A-</option>
        </select>
    </div>
</div>

<button type="submit">Salvar</button>